<h1>Author</h1>
<%= form_for :author, url: authors_path do |f| %>
    <p>
      <%= f.label 'First name: ' + @author.first_name  %><br>
    </p>

    <p>
      <%= f.label 'Last name: ' + @author.last_name %><br>
    </p>

    <p>
      <%= f.label 'Homepage: ' + @author.homepage %><br>
    </p>
<% end %>